---
export interface Props {
	title: string;
	body: string;
	href: string;
	imageUrl: string;
}

const { href, title, body, imageUrl } = Astro.props as Props;
---

<a href={href} class="link-card">
	<div class="box flex flex-col h-full justify-center text-center gap-2">
		<div class="w-28 mx-auto">
			<img src={imageUrl} alt="Pokemon" width="250" height="250" decoding="async">
		</div>
		<h2 class="text-2xl font-bold mt-3 capitalize">
			{title}
		</h2>
		<p>
			{body}
		</p>
	</div>
</a>

<style>
	:root {
		--link-gradient: linear-gradient(45deg, #4f39fa, #da62c4 30%, var(--color-border) 60%);
	}

	.link-card {
		display: flex;
		flex-direction: column;
		padding: 0.15rem;
		height: 100%;
		background-image: var(--link-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card>.box {
		width: 100%;
		text-decoration: none;
		padding: 1em 1.3em;
		border-radius: 0.35rem;
		color: var(--text-color);
		background-color: white;
		opacity: 0.8;
	}

	h2 {
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: #4f39fa;
	}
</style>
