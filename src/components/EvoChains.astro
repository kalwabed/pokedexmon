---
export interface Props {
  evoChains: { name: string; imageUrl: string }[];
}

const { evoChains } = Astro.props as Props;
---

<div class='grid grid-cols-1 md:grid-cols-4 gap-8 items-center'>
  {
    evoChains.map(({ name, imageUrl }, index) => (
      <a class='flex items-center w-full' href={`/${name}`}>
        <div class='flex flex-col mx-auto md:mx-0 items-center gap-4 hover:-translate-y-2 transition duration-300'>
          <div class='bg-gray-200 rounded-full w-32 h-32 p-6 shadow flex items-center'>
            <img src={imageUrl} alt={name} width='100' height='100' decoding='async' loading='lazy' />
          </div>
          <p class='capitalize font-medium'>{name}</p>
        </div>
        {index !== evoChains.length - 1 && (
          <div class='mx-auto hidden md:block w-1'>
            <svg
              class='w-6 h-6'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
              xmlns='http://www.w3.org/2000/svg'
            >
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 8l4 4m0 0l-4 4m4-4H3' />
            </svg>
          </div>
        )}
      </a>
    ))
  }
</div>
