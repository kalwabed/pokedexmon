---
export interface Props {
  element: string
}

const { element } = Astro.props as Props;
---

<img class={`h-7 w-7 ${element} rounded-full p-1`} src={`${element}.png`} title={element} width="30" height="30"
  alt="element" decoding="async" loading="lazy" />

