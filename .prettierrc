{
  "semi": true,
  "useTabs": false,
  "printWidth": 120,
  "tabWidth": 2,
  "arrowParens": "avoid",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "astroAllowShorthand": true,
  "plugins": ["./node_modules/prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
